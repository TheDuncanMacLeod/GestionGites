{% extends "base.html.twig" %}

{% block title %}
	Dashboard Gite
{% endblock %}

{% block body %}
	<h1>
		Administration des gites
	</h1>

	{% for message in app.flashes('success') %}
	<div class="alert alert-success">
		<p> {{message}} </p>
	</div>
	{% endfor %}

    <a href="{{ path('admin.new') }}" class="btn btn-warning">Cr√©er</a>

	<div class="row">
		<table class="table table-striped">
			<thead>
				<th>#id</th>
				<th>Nom</th>
				<th>Actions</th>
			</thead>
			<tbody>
				{% for gite in gites %}
					<th>#{{gite.id}}</th>
					<th>{{gite.name}}</th>
					<th>
						<a href="{{path('admin.edit', {'id' : gite.id})}}" class="btn btn-primary">Editer</a>
					</th>
				</tbody>

			{% endfor %}


		{% endblock %}
