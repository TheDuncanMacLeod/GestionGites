{% extends "base.html.twig" %}

{% block title %}
	Les gites de France
{% endblock %}

{% block body %}

<h1>Les gites disponibles</h1>

<div class="row mt-3 mb-3">
	{{form_start(form)}}
	<div class="form-control">
		<div class="col-md-4">
			{{form_row(form.minSurface)}}
		</div>
		<div class="col-md-4">
			{{form_row(form.maxBedrooms)}}
		</div>
		<div class="col-md-4">
			{{form_row(form.findCity)}}
		</div>
		<div class="col-md-4">
			{{form_row(form.AcceptAnimals)}}
		</div>
		<div class="col-md-4 mt-3 mb-3">
			{{form_row(form.submit)}}
		</div>
	</div>
	{{form_end(form)}}
</div>

<div class="row">
	{% for gite in gites %}
		<div class="col-md-4">
			<div class="card h-100" style="width: 18rem;">
				<img src="/images/gites/{{ gite.imageName }}" class="card-img-top" alt="">
				<div class="card-body d-flex flex-column">
					{% if gite.imageName %}
						<img src="{{vich_uploader_asset(gite,'imageFile')}}" class="card-img-top" alt="">
					{% else %}
						<img src="images/img/default_housepict.jpg" class="card-img-top" alt="">
					{% endif %}
					<h5 class="card-title">{{ gite.name }}</h5>
					<h5 class="card-title">{{ gite.id }}</h5>
					<h6 class="card-subtitle mb-2 text-muted">{{ gite.createdAt|format_datetime()}}</h6>
					<p class="card-text flex-grow-1">
						{{gite.description}}
						<h6 class="card-subtitle mb-2 text-muted">
							Surface :
							{{gite.Surface}}
						</br>
						Bedrooms :{{gite.BedRooms}}
					</p>
				</br>
				Ville :
				{{gite.City}}
			</br>
			Annimaux accept√©s :
			{{ (gite.Animals) ? 'oui' : 'non' }}
		</h6>
	</p>
	<a class="btn btn-secondary" href="{{ path('gite.show', {'id' : gite.id})}}">Voir le gite
	</a>
</div></div></div>{% endfor %}</div>{% endblock %}
